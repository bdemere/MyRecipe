<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/xy_comment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_audio_record"
        android:src="@android:drawable/ic_notification_overlay"
        android:layout_alignTop="@+id/comment_audio_play"
        android:layout_toStartOf="@+id/comment_audio_play"
        android:layout_toLeftOf="@+id/comment_audio_play"
        android:layout_alignBottom="@+id/comment_audio_play" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_audio_play"
        android:layout_marginTop="44dp"
        android:src="@android:drawable/ic_media_play"
        android:layout_below="@+id/xy_comment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>