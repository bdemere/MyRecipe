<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <include layout="@layout/fragment_comment_list"
        android:id="@+id/included_recycler_view"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    </include>

    <TextView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/comment_text"
        android:text="its here"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/included_recycler_view"
        android:layout_alignEnd="@+id/included_recycler_view"
        android:layout_above="@+id/included_recycler_view" />
</RelativeLayout>